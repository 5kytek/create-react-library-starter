{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "declaration": true,
    "declarationDir": "./dist/typings/",
    "strictNullChecks": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/", "src/examples/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
